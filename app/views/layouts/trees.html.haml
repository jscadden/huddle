!!! XML utf-8
!!! Strict
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %title
      Huddle
    = stylesheet_link_tag("jquery.fancybox-1.3.1.css")
    = render "/common/blueprint_stylesheet_links"
    = stylesheet_link_tag 'compiled/huddle.css', :media => 'screen, projection'
    = yield :styles
    = javascript_include_tag("processing-0.7.1.js")
    = javascript_include_tag("http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js")
    = javascript_include_tag("http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js")
    = orbited_javascript
    = javascript_include_tag("jquery.mousewheel.js")
    = javascript_include_tag("jquery.huddle.js")
    = javascript_include_tag("slider.js")
    = javascript_include_tag("humane.js")
    = javascript_include_tag("jquery.fancybox-1.3.1.pack.js")
    - javascript_include_tag("jquery.form.js")
    = javascript_include_tag("init.js")
    = yield :scripts
    = stomp_connect("huddle", {:js => "jquery", :callbacks => {:onmessageframe => "stompOnMessageFrame"}})
  %body(class="#{page_class}")
    #container
      #header
        %h1 Realtime Huddle!
      #content
        #flash= show_flash
        = yield
      #right_column
        = yield(:right_column)
    #footer
